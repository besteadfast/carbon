ul:not(.list-none) {
	/* first level list */
	@apply
		text-16 md:text-18
		leading-100
		list-disc;

	& + * {
		@apply mt-s3;
	}

	& > li {
		/* first level list item */
		@apply
			mt-5;

		& > ul {
			/* second level list */
			@apply
				pl-10;

			& > li {
				/* second level list item */

			}
		}
	}
}

ol:not(.list-none) {
	/* first level list */
	@apply
		text-16 md:text-18
		leading-100
		list-decimal;

	& + * {
		@apply mt-s3;
	}

	& > li {
		/* first level list item */
		@apply
			mt-5;

		& > ol {
			/* second level list */
			@apply
				pl-10;

			& > li {
				/* second level list item */

			}
		}
	}
}
