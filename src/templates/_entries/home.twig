{% extends "_layouts" %}

{% block main %}
	<section class="py-s12 my-s12">
		<h1 class="text-center">Site Homepage</h1>

		{% set accordionMatrix = entry.accordion.all() %}

		<div class="max-w-[600px] my-s12 mx-auto">
  		    {% for block in accordionMatrix %}
                <Accordion>
                    <template v-slot:title>
                        {{ block.accordionTitle }}
                    </template>
                    <template v-slot:icon>
                        ^
                    </template>
                    <template v-slot:content>
                        {{ block.accordionBody }}
                    </template>
                </Accordion>
            {% endfor %}
		</div>
		<div class="max-w-[600px] my-s12 mx-auto">
            <Dropdown :options="[
                {title: 'first'},
                {title: 'second'},
                {title: 'third'},
                {title: 'fourth'}
            ]">
                <template #icon>
                    ^
                </template>
            </Dropdown>
		</div>
	</section>
{% endblock %}
