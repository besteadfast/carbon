{% extends "_layouts" %}

{% set accordionMatrix = entry.accordion.all() %}

{% set tabsMatrix = entry.tabs.all() %}

{% block main %}
	<section class="py-s12 my-s12">

	   <h1 class="text-center">Site Homepage</h1>

	{% if accordionMatrix|length %}
		<div class="max-w-[600px] my-s12 mx-auto">
  		    {% for block in accordionMatrix %}
                <Accordion>
                    <template v-slot:title>
                        {{ block.accordionTitle }}
                    </template>
                    <template v-slot:icon>
                        ^
                    </template>
                    <template v-slot:content>
                        {{ block.accordionBody }}
                    </template>
                </Accordion>
            {% endfor %}
		</div>
	{% endif %}
		<div class="max-w-[600px] my-s12 mx-auto">
            <Dropdown :options="[
                {title: 'first'},
                {title: 'second'},
                {title: 'third'},
                {title: 'fourth'}
            ]">
                <template #icon>
                    ^
                </template>
            </Dropdown>
		</div>

    	{% if tabsMatrix|length %}
    		<div class="max-w-[600px] my-s12 mx-auto">
                <Carbon-Tabs>
                    <template v-slot:title>
                    {% for block in tabsMatrix %}
                            <Carbon-Tab>{{ block.tabTitle }}</Carbon-Tab>
                    {% endfor %}
                    </template>
                    <template v-slot:content>
                        {% for block in tabsMatrix %}
                                <Carbon-Tab-Panel>{{ block.tabContent }}</Carbon-Tab-Panel>
                        {% endfor %}
                    </template>
                </Carbon-Tabs>
    		</div>
    	{% endif %}
   		<div class="max-w-[600px] flex gap-x-s4 justify-center items-center container my-s12 mx-auto text-center">
            <Carbon-Button
                type="outline"
                outline-classes="border border-blue-300 text-blue-500 rounded interact:bg-blue-500 interact:text-white"
            >Test</Carbon-Button>
            <Carbon-Button
                type="solid"
                solid-classes="bg-blue-300 text-white rounded interact:bg-blue-500 interact:text-white"
                sizing-classes="px-s6 py-s4"
            >Test</Carbon-Button>
            <Carbon-Button
                type="text"
                text-classes="text-blue-500 rounded interact:text-blue-700"
                sizing-classes="p-0"
            >Test</Carbon-Button>
        </div>
	</section>
{% endblock %}
